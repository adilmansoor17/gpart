<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_10"
    tools:context=".MapSlotFormFragment">

    <include
        android:id="@+id/include"
        layout="@layout/maintoolbar"
        android:layout_width="409dp"
        android:layout_height="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="413dp"
        android:layout_height="681dp"
        android:background="@color/brown_900"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView2z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Generate Slots"
                android:textColor="#F9F9FA"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="111dp" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp">

                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint=" Location"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />

                <EditText
                    android:id="@+id/row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint=" Rows"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />

                <EditText
                    android:id="@+id/col"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="110dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint=" Columns"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="165dp"
                    android:background="@drawable/rounded_edittext"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editTexat_passwosardsLogIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="left"
                        android:drawableLeft="@drawable/ic_pass"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:hint=" Type "
                        android:padding="10dp"
                        android:textColor="#fff"
                        android:textColorHint="#fff" />

                    <RadioGroup
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <RadioButton
                            android:id="@+id/vip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:fontFamily="serif"
                            android:paddingLeft="5dp"
                            android:text="VIP"
                            android:textColor="#fff" />

                        <RadioButton
                            android:id="@+id/user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:fontFamily="serif"
                            android:paddingLeft="5dp"
                            android:text="User"
                            android:textColor="#fff" />
                    </RadioGroup>


                </LinearLayout>


                <EditText
                    android:id="@+id/slots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="270dp"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint=" No of Slots"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />


                <TextView
                    android:id="@+id/button_slotSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="325dp"
                    android:background="@drawable/rounded_edittext"
                    android:fontFamily="serif"
                    android:padding="5dp"
                    android:text="Save"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/edit_text_color"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
            </RelativeLayout>

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>