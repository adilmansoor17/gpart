<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MapFragment">


    <include
        android:id="@+id/include"
        layout="@layout/maintoolbar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:background="@color/brown_900"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView2z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="All Slots"
                android:textColor="#F9F9FA"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="111dp" />

            <EditText
                android:id="@+id/editText_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:background="@drawable/rounded_edittext"

                android:ems="10"
                android:fontFamily="serif"
                android:hint="Search Slot"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textColor="#F9F9FA"
                android:textColorHint="#F9F9FA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="7dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recviewmap"
                        android:layout_width="wrap_content"
                        android:layout_height="570dp"
                        android:padding="3px"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/include" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recviewmap2"
                        android:layout_width="wrap_content"
                        android:layout_height="570dp"
                        android:padding="3px"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/include" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recviewmap3"
                        android:layout_width="wrap_content"
                        android:layout_height="570dp"
                        android:padding="3px"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/include" />


                </LinearLayout>

<!--            <Button-->
<!--                android:id="@+id/reload"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Reload" />-->

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>